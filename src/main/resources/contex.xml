<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="t1000" class="robot.ModelT1000"
          p:leg-ref="toshibaLeg"
          p:head-ref="toshibaHead"
          p:hand-ref="toshibaHand"
    >
        <constructor-arg value="15" index="1" type="int"/>
        <constructor-arg value="true" index="2" type="boolean"/>
        <constructor-arg value="ChackNuris" index="0" type="java.lang.String"/>
    </bean>

    <bean id="sonyHand" class="impls.sony.SonyHand"></bean>
    <bean id="sonyHead" class="impls.sony.SonyHead"></bean>
    <bean id="sonyLeg" class="impls.sony.SonyLeg"></bean>

    <bean id="toshibaHand" class="impls.toshiba.ToshibaHand"></bean>
    <bean id="toshibaHead" class="impls.toshiba.ToshibaHead"></bean>
    <bean id="toshibaLeg" class="impls.toshiba.ToshibaLeg"></bean>

</beans>